{
  "name": "notes-api",
  "version": "1.0.0",
  "description": "Notes/Knowledge Base API built with Bun.js, Elysia.js, and PostgreSQL",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "test": "bun test",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "migrate:up": "bun run src/db/migrate.ts up",
    "migrate:down": "bun run src/db/migrate.ts down",
    "db:setup": "bun run src/db/migrate.ts up"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/bun": "latest",
    "@types/pg": "^8.16.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@elysiajs/bearer": "^1.4.2",
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/jwt": "^1.4.0",
    "bcryptjs": "^3.0.3",
    "elysia": "^1.4.21",
    "postgres": "^3.4.7"
  }
}
